config defaultToCurrentScreen true   
config nudgePercentOf screenSize
config resizePercentOf screenSize

bind a:shift;alt push left bar-resize:screenSizeX/2
bind d:shift;alt push right  bar-resize:screenSizeX/2
bind w:shift;alt move screenOriginX;screenOriginY screenSizeX;screenSizeY
bind 3:shift;alt push up  bar-resize:screenSizeY/2
bind x:shift;alt push down  bar-resize:screenSizeY/2
bind s:shift;alt move screenOriginX+screenSizeX*0.2;screenOriginY screenSizeX*0.6;screenSizeY
bind q:shift;alt corner top-left resize:screenSizeX/2;screenSizeY/2
bind e:shift;alt corner top-right resize:screenSizeX/2;screenSizeY/2
bind z:shift;alt corner bottom-left resize:screenSizeX/2;screenSizeY/2
bind c:shift;alt corner bottom-right resize:screenSizeX/2;screenSizeY/2
bind 1:shift;alt throw 0
bind 2:shift;alt throw 1
bind f:shift;alt move screenOriginX;screenOriginY 1024;790

